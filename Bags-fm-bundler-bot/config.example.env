# Bags.fm Bundler Bot Configuration
# Copy this file to .env and fill in your values

# Solana wallet private key (base58 encoded)
PRIVATE_KEY=your_wallet_private_key_here

# Solana RPC endpoint (use a reliable RPC like Helius, QuickNode, etc.)
RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# WebSocket endpoint for real-time updates
RPC_WEBSOCKET_ENDPOINT=wss://api.mainnet-beta.solana.com

# Number of wallets to distribute funds to
DISTRIBUTE_WALLET_NUM=4

# Backend URL (if using a custom backend)
BACKEND_URL=https://your-backend-url.com

# Trading slippage tolerance (0.01 = 1%)
SLIPPAGE=0.01

# Optional: Custom Jito fee in lamports (default: 1,000,000 = 0.001 SOL)
# JITO_FEE=1000000

# Optional: Custom RPC timeout in milliseconds
# RPC_TIMEOUT=30000

# Optional: Enable debug logging
# DEBUG=true
